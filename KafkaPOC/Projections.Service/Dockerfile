FROM microsoft/dotnet:2.2-aspnetcore-runtime AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM microsoft/dotnet:2.2-sdk AS build
WORKDIR /src
COPY ["Projections.Service/Projections.Service.csproj", "Projections.Service/"]
RUN dotnet restore "Projections.Service/Projections.Service.csproj"
COPY . .
WORKDIR "/src/Projections.Service"
RUN dotnet build "Projections.Service.csproj" -c Release -o /app

FROM build AS publish
RUN dotnet publish "Projections.Service.csproj" -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "Projections.Service.dll"]